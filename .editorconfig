# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,cc,cxx,c++}]
indent_style = space
indent_size = 2
max_line_length = 80

# C++ header files
[*.{hpp,h,hxx,h++}]
indent_style = space
indent_size = 2
max_line_length = 80

# CMake
[CMakeLists.txt]
indent_style = space
indent_size = 2

[*.cmake]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab

# Python scripts (if any)
[*.py]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# JSON, YAML
[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off
